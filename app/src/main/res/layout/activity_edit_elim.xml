<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cr.ac.itcr.examen1moviles.EditElimActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar y eliminar "
                android:id="@+id/textView"
                android:textSize="30dp"
                android:textColor="#ab71c5"
                android:textStyle="bold|italic"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etNombreEE"
                android:layout_weight="1"
                android:hint="Nombre"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etNombreCEE"
                android:layout_weight="1"
                android:hint="Nombre cientÃ­fico"
                android:textSize="20dp"
                android:textIsSelectable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etColorEE"
                android:layout_weight="1"
                android:hint="Color"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1">

            <Button
                android:layout_width="157dp"
                android:layout_height="74dp"
                android:text="Editar"
                android:id="@+id/btnAgregarFlorEE"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:background="@color/green"
                android:layout_marginRight="12dp" />

            <Button
                android:layout_width="157dp"
                android:layout_height="74dp"
                android:text="Eliminar"
                android:id="@+id/btnEliminarEE"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:background="#bf1616" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
