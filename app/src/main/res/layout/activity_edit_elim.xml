<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cr.ac.itcr.examen1moviles.EditElimActivity"
    android:background="@drawable/fondolist">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar y eliminar "
                android:id="@+id/textView"
                android:textSize="30dp"
                android:textColor="@color/green"
                android:textStyle="bold|italic"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@null"
                android:textColorHighlight="#ffffff"  />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:weightSum="1"
                android:gravity="center">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:id="@+id/textView2"
                    android:layout_weight="0.22"
                    android:textSize="20dp"
                    android:gravity="center_vertical|bottom|center_horizontal"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="0.72" >

                <EditText
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNombreEE"
                    android:layout_weight="1"
                    android:hint="Nombre"
                    android:textSize="20dp"
                    android:textColorHint="@color/gray"
                    android:textColorLink="#ffffff"
                    android:textColor="#ffffff"
                    android:textColorHighlight="#ffffff"
                    android:textIsSelectable="false"
                    android:textCursorDrawable="@null"
                    android:theme="@style/AlertDialog.AppCompat.Light" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NCientífico"
                    android:id="@+id/textView3"
                    android:textSize="20dp"
                    android:gravity="center_vertical|bottom|center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="0.51" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="0.72" >

                <EditText
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNombreCEE"
                    android:layout_weight="1"
                    android:hint="Nombre científico"
                    android:textSize="20dp"
                    android:textColorHint="@color/gray"
                    android:textColorLink="#ffffff"
                    android:textColor="#ffffff"
                    android:textColorHighlight="#ffffff"
                    android:textIsSelectable="false"
                    android:textCursorDrawable="@null"
                    android:theme="@style/AlertDialog.AppCompat.Light"  />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:weightSum="1">

                <TextView
                    android:layout_width="106dp"
                    android:layout_height="47dp"
                    android:text="Color"
                    android:id="@+id/textView4"
                    android:textSize="20dp"
                    android:gravity="center_vertical|bottom|center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="0.32" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="94dp"
                android:layout_height="match_parent"
                android:layout_weight="0.10" >

                <EditText
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etColorEE"
                    android:layout_weight="0.53"
                    android:hint="Color"
                    android:textSize="20dp"
                    android:textColorHint="@color/gray"
                    android:textColorLink="#ffffff"
                    android:textColor="#ffffff"
                    android:textColorHighlight="#ffffff"
                    android:textIsSelectable="false"
                    android:textCursorDrawable="@null"
                    android:theme="@style/AlertDialog.AppCompat.Light" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:layout_width="140dp"
                android:layout_height="64dp"
                android:text="Editar"
                android:id="@+id/btnAgregarFlorEE"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@color/green"
                android:layout_marginRight="12dp"
                android:textAppearance="@style/AlertDialog.AppCompat.Light"
                android:textColor="#ffffff"
                />

            <Button
                android:layout_width="140dp"
                android:layout_height="64dp"
                android:text="Eliminar"
                android:id="@+id/btnEliminarEE"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textAppearance="@style/AlertDialog.AppCompat.Light"
                android:background="#bf1616"
                android:textColor="#ffffff"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
